<div class="content row">
    <h1 class="page-title">Add / Edit film</h1>

    <div class="col-xs-4">
        <!--TODO: add film title to the alt attr-->
        <img src="http://media.moviemanager.biz/movies/Black-Mass_25470_posterlarge.jpg" alt="film-name-poster"
             class="film-poster"/>
    </div>
    <div class="col-xs-6 editing-block">
        <form class="form-horizontal">
            <div class="form-group">
                <label for="title" class="col-xs-4 control-label edit-form-label">Title</label>

                <div class="col-xs-8">
                    <input type="text" class="form-control price" id="title"
                           placeholder="Film's name">
                </div>
            </div>

            <div class="form-group">
                <label for="duration" class="col-xs-4 control-label edit-form-label">Duration</label>

                <div class="col-xs-8">
                    <input type="number" class="form-control duration" id="duration"
                           placeholder="minutes">
                </div>
            </div>

            <div class="form-group">
                <label for="price" class="col-xs-4 control-label edit-form-label">Price</label>

                <div class="col-xs-8">
                    <input type="number" class="form-control price" id="price"
                           placeholder="$ per one ticket">
                </div>
            </div>
            <div class="form-group">
                <label for="image" class="col-xs-4 control-label edit-form-label">Image</label>

                <div class="col-xs-8">
                    <input type="file" class="form-control image" id="image"
                           placeholder="choose an image">
                </div>
            </div>

            <div class="form-group">
                <label for="date" class="col-xs-4 control-label edit-form-label">Premiere date</label>

                <div class="col-xs-8">
                    <input type="date" class="form-control date" id="date"
                           placeholder="choose a date">
                </div>
            </div>
            <div class="form-group">
                <label for="genre" class="col-xs-4 control-label edit-form-label">Genres</label>

                <div class="col-xs-8">
                    <select class="form-control" id="genre">
                        <option>Sci-Fi</option>
                        <option>Comedy</option>
                        <option>Kids</option>
                        <option>Drama</option>
                        <option>Documentary</option>
                        <option>Horror</option>
                        <option>Adventure</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label for="description" class="col-xs-4 control-label edit-form-label">Description</label>

                <div class="col-xs-8">
                                                            <textarea class="form-control description" id="description"
                                                                      placeholder="Description of the film"></textarea>
                </div>
            </div>

            <div class="form-group">
                <label for="actors" class="col-xs-4 control-label edit-form-label">Actors</label>

                <div class="col-xs-8">
                    <input type="text" class="form-control actors" id="actors">
                </div>
            </div>
            <div class="form-group">
                <label for="directed" class="col-xs-4 control-label edit-form-label">Directed by</label>

                <div class="col-xs-8">
                    <input type="text" class="form-control directed" id="directed">
                </div>
            </div>

            <div class="form-group">
                <label for="YouTubeLink" class="col-xs-4 control-label edit-form-label">YouTube Link</label>

                <div class="col-xs-8">
                    <input type="url" class="form-control you-tube" id="YouTubeLink"
                           placeholder="Link to trailer">
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12">
                    <button type="submit" class="btn btn-default edit-form-delete-film">Delete</button>
                    <button type="submit" class="btn btn-default edit-form-save-changes">Save</button>

                </div>
            </div>
        </form>

    </div>
</div>


