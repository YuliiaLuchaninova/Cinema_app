<div class="content row">
    <h1 class="page-title">Edit {{title}}</h1>

    <div class="col-xs-4">
        <!--TODO: add film title to the alt attr-->
        <img src="{{filmItem.image}}" alt="film-name-poster"
             class="film-poster"/>
    </div>
    <div class="col-xs-6 editing-block">
        <form class="form-horizontal" action="/film-edit-page/edit-film/{{filmItem.id}}" method="POST"
              enctype="multipart/form-data"
              id="create-movie">
            <div class="form-group">
                <label for="title" class="col-xs-4 control-label edit-form-label">Title</label>

                <div class="col-xs-8">
                    <input type="text" class="form-control price" id="title"
                           placeholder="Film's name" name="movieName" required value="{{title}}">
                </div>
            </div>

            <div class="form-group">
                <label for="duration" class="col-xs-4 control-label edit-form-label">Duration</label>

                <div class="col-xs-8">
                    <input type="number" class="form-control duration" id="duration"
                           placeholder="minutes" name="duration" required value="{{filmItem.duration}}">
                </div>
            </div>

            <div class="form-group">
                <label for="price" class="col-xs-4 control-label edit-form-label">Price</label>

                <div class="col-xs-8">
                    <input type="number" class="form-control price" id="price"
                           placeholder="$ per one ticket" name="price" required value="{{filmItem.price}}">
                </div>
            </div>
            <div class="form-group">
                <label for="image" class="col-xs-4 control-label edit-form-label">Image</label>

                <div class="col-xs-8">
                    <input type="file" class="form-control image" id="image"
                           placeholder="choose an image" name="image" required value="{{filmItem.image}}">
                </div>
            </div>

            <div class="form-group">
                <label for="date" class="col-xs-4 control-label edit-form-label">Premiere date</label>

                <div class="col-xs-8">
                    <input type="date" class="form-control date" id="date"
                           placeholder="choose a date" name="premiere" required value="{{filmItem.premiere}}">
                </div>
            </div>
            <div class="form-group">
                <label for="genre" class="col-xs-4 control-label edit-form-label">Genres</label>

                <div class="col-xs-8">
                    <select class="form-control" id="genre" name="genre">
                        <option>Sci-Fi</option>
                        <option>Comedy</option>
                        <option>Kids</option>
                        <option>Drama</option>
                        <option>Documentary</option>
                        <option>Horror</option>
                        <option>Adventure</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label for="description" class="col-xs-4 control-label edit-form-label">Description</label>

                <div class="col-xs-8">
                    <textarea class="form-control description" id="description"
                              placeholder="Description of the film, max 870 symb."
                              name="description" required>{{filmItem.description}}</textarea>
                </div>
            </div>

            <div class="form-group">
                <label for="actors" class="col-xs-4 control-label edit-form-label">Actors</label>

                <div class="col-xs-8">
                    <input type="text" class="form-control actors" id="actors" name="actors" required
                           value="{{filmItem.actors}}">
                </div>
            </div>
            <div class="form-group">
                <label for="directed" class="col-xs-4 control-label edit-form-label">Directed by</label>

                <div class="col-xs-8">
                    <input type="text" class="form-control directed" id="directed" name="director" required
                           value="{{filmItem.director}}">
                </div>
            </div>

            <div class="form-group">
                <label for="YouTubeLink" class="col-xs-4 control-label edit-form-label">YouTube Link</label>

                <div class="col-xs-8">
                    <input type="url" class="form-control you-tube" id="YouTubeLink"
                           placeholder="Link to trailer" name="youtube" required value="{{filmItem.YouTube}}">
                </div>
            </div>

            <div class="form-group">
                <label for="enddate" class="col-xs-4 control-label edit-form-label">End of the show</label>

                <div class="col-xs-8">
                    <input type="date" class="form-control date" id="enddate"
                           placeholder="choose date oh the end of show" name="enddate" required
                           value="{{filmItem.enddate}}">
                </div>
            </div>

            <div class="form-group">
                <label for="time1" class="col-xs-4 control-label edit-form-label">Time of the show</label>

                <div class="col-xs-4">
                    <select class="form-control" id="time1" name="time1">
                        <option value="{{filmItem.time1}}">9:00</option>
                        <option value="{{filmItem.time1}}">11:00</option>
                        <option value="{{filmItem.time1}}">13:00</option>
                        <option value="{{filmItem.time1}}">15:00</option>
                        <option value="{{filmItem.time1}}">17:00</option>
                        <option value="{{filmItem.time1}}">19:00</option>
                        <option value="{{filmItem.time1}}">21:00</option>
                        <option value="{{filmItem.time1}}">23:00</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="time2" class="col-xs-4 control-label edit-form-label"></label>

                <div class="col-xs-4">
                    <select class="form-control" id="time2" name="time2">
                        <option value="{{filmItem.time2}}">9:00</option>
                        <option value="{{filmItem.time2}}">11:00</option>
                        <option value="{{filmItem.time2}}">13:00</option>
                        <option value="{{filmItem.time2}}">15:00</option>
                        <option value="{{filmItem.time2}}">17:00</option>
                        <option value="{{filmItem.time2}}">19:00</option>
                        <option value="{{filmItem.time2}}">21:00</option>
                        <option value="{{filmItem.time2}}">23:00</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="time3" class="col-xs-4 control-label edit-form-label"></label>

                <div class="col-xs-4">
                    <select class="form-control" id="time3" name="time3">
                        <option value="{{filmItem.time3}}">9:00</option>
                        <option value="{{filmItem.time3}}">11:00</option>
                        <option value="{{filmItem.time3}}">13:00</option>
                        <option value="{{filmItem.time3}}">15:00</option>
                        <option value="{{filmItem.time3}}">17:00</option>
                        <option value="{{filmItem.time3}}">19:00</option>
                        <option value="{{filmItem.time3}}">21:00</option>
                        <option value="{{filmItem.time3}}">23:00</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-12">
                    <a href="/admin" class="btn btn-default edit-form-delete-film" form="create-movie">Cancel </a>
                    <button type="submit" class="btn btn-default edit-form-save-changes" form="create-movie">Update
                    </button>

                </div>
            </div>
        </form>

    </div>
</div>


