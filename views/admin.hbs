        <section id="manageMovies" class="active-tab tab-content">
            <a href="/film-edit-page/create-film" class="btn btn-success add-film">Add new film</a>
            <ul class="film-list">

                {{#each filmList}}
                    <li id="{{id}}" class="film-item">
                        <h2 class="film-title">
                            <a href='/films/{{id}}'> {{title}}</a>
                        </h2>

                        <img src="{{image}}" alt="{{title}}"
                             class="film-avatar"/>

                        <div class="premier-date">
                            {{premiere}}
                        </div>

                        <div class="ctrl-block">
                            <a href="/film-edit-page/{{id}}" class="btn film-edit">
                                Edit
                            </a>

                            {{!--<button class="btn film-remove">--}}
                            {{!--Remove--}}
                            {{!--</button>--}}
                            <a href="/admin/remove/films/{{id}}" class="btn film-remove">
                                Remove
                            </a>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </section>
