<div class="row">
    <div class="row top-nav-module">
        <ul class="tabs">
            <li class="tab-active manage-movies tab">
                <a href="#manageMovies" class="tab-link">Manage Movies</a>
            </li>

            <li class="schedule tab">
                <a href="#schedule" class="tab-link">Schedule</a>
            </li>

            <li class="users tab">
                <a href="#users" class="tab-link">Manage Users</a>
            </li>

            <li class="booking tab">
                <a href="#booking" class="tab-link">Manage Booking</a>
            </li>

            <li class="contact tab">
