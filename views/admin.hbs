        <section id="contact" class="tab-content">

            <div class="col-xs-6 contacts">
                <p>Address: {{adress}} </p>

                <p>Phone:{{phone}}</p>

                <p>Facebook group :{{facebook}}</p>

                <p>Twitter: {{twitter}}</p>

                <p>Skype : {{skype}}</p>
            </div>

            <div class="col-xs-6">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2497.9661420912803!2d22.525213015284372!3d51.23811843817774!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x472259d5a5513d85%3A0xe0c4db85ceb62897!2sTomasza+Zana+39%2C+20-400+Lublin!5e0!3m2!1sru!2spl!4v1447951077219"
                        class="map" allowfullscreen></iframe>
            </div>
            <div class="ctrl-block">
                <a href="/edit-about-us" class="btn btn-default">
                    Edit
                </a>


        </section>
        <section id="myProfile" class="tab-content">
            <h1 class="page-title">Admin</h1>

            <div class="content row">
                <div class="col-xs-4">

                    <img src="../../images/Mexican-Boss-icon.png" alt="admin-logo"
                         class="admin-poster"/>
                </div>
                <div class="col-xs-6 editing-block">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="title" class="col-xs-4 control-label edit-form-label">Name</label>

                            <div class="col-xs-8">
                                <input type="text" class="form-control price" id="title">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="surname" class="col-xs-4 control-label edit-form-label">Surname</label>

                            <div class="col-xs-8">
                                <input type="text" class="form-control duration" id="surname">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="date" class="col-xs-4 control-label edit-form-label">Birthday</label>

                            <div class="col-xs-8">
                                <input type="date" class="form-control date" id="date"
                                       placeholder="choose a date">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="email" class="col-xs-4 control-label edit-form-label">E-mail</label>

                            <div class="col-xs-8">
                                <input type="email" class="form-control actors" id="email">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword1"
                                   class="col-xs-4 control-label edit-form-label">Password</label>

                            <div class="col-xs-8">
                                <input type="password" class="form-control" id="inputPassword1"
                                       placeholder="*******">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputPassword1" class="col-xs-4 control-label edit-form-label">Confirm
                                password</label>

                            <div class="col-xs-8">
                                <input type="password" class="form-control" id="inputPassword1"
                                       placeholder="*******">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12">
                                <button type="submit" class="btn btn-default edit-form-delete-film">Delete
                                </button>
                                <button type="submit" class="btn btn-default edit-form-save-changes">Save
                                </button>

                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </section>
    </div>
</div>

